<Window x:Class="ConexionDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexionDB"
        mc:Ignorable="d"
        Title="CRUD" Height="450" Width="800"
        Activated="Window_Activated">  <!-- Sirve como trigger pero solo cuando la ventana 
                            es activada por primera vez o cuando pasa de segundo a primer plano -->
    <Grid>
        <Label Content="Clientes" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top" Height="37" Width="92" FontSize="22"/>
        <ListBox Name="listaClientes" Margin="26,52,584,123" MouseDoubleClick="listaClientes_MouseDoubleClick"/>

        <Label Content="Pedidos" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Height="37" Width="92" FontSize="22"/>
        <ListBox Name="listaPedidos" Margin="231,52,379,123"/>

        <Label Content="Todos P." HorizontalAlignment="Left" Margin="436,10,0,0" VerticalAlignment="Top" Height="37" Width="92" FontSize="22"/>
        <ListBox x:Name="listaTodosPedidos" Margin="436,52,10,10"/>
        <Button Content="Borrar" HorizontalAlignment="Left" Margin="684,12,0,0" VerticalAlignment="Top" Height="32" Width="95" FontSize="20" FontFamily="Arial Black" Click="Button_Click"/>

        <Button Content="Insertar" HorizontalAlignment="Left" Margin="26,316,0,0" VerticalAlignment="Top" Height="51" Width="76" Click="Button_Click_1"/>
        <Button Content="Borrar" HorizontalAlignment="Left" Margin="140,316,0,0" VerticalAlignment="Top" Height="51" Width="76" Click="Button_Click_2"/>
        <TextBox x:Name="insertarClientes" HorizontalAlignment="Left" Margin="26,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="40"/>

        <Button Content="Actualizar" HorizontalAlignment="Left" Margin="264,342,0,0" VerticalAlignment="Top" Height="48" Width="124" Click="Button_Click_3"/>

    </Grid>
</Window>
